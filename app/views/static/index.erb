	<th>No.</th> 
    <th>Url</th> 
    <th>Short Url</th> 
    <th>Click Count</th> 
</tr> 
</thead> 
<tbody> 
	<% @urls.each_with_index do |url,count| %>
		<tr> 
		    <td><%= count + 1%></td> 
		    <td><%= url.long_url %></td> 
		    <td><a href=<%= url.short_url %>><%= url.short_url %><a> </td>
			<td><%= url.click_count %></td>
		</tr> 
	<% end %>
</tbody> 
</table> 
